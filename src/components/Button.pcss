.button
{
    background-color: #00899F;
    border: 1px solid black;
    padding: 10px;
    border-radius: 5px;
    box-shadow: 0px 1px 1px #888888;
    color: white;
}
.button:active
{
    box-shadow: 0px 0px 0px #888888;
    background-color: #1AB5C2;
    
}
.button:focus {
    outline:0;
}


.block
{
    width: 100%;
}